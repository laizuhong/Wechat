<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.v7.widget.CardView
        android:layout_width="200dp"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <LinearLayout
                android:id="@+id/create"
                android:background="@drawable/selector_menu"
                android:layout_width="match_parent"
                android:layout_height="@dimen/def_height"
                android:gravity="center_vertical"
                android:orientation="horizontal">
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:background="@drawable/ic_create_group_cheat"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="发起群聊"
                    android:textSize="15sp"
                    android:layout_marginLeft="10dp"
                    android:textColor="@color/white"/>
            </LinearLayout>
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="0.8dp"
                android:background="@color/colorPrimaryDark"/>
            <LinearLayout
                android:id="@+id/add_friend"
                android:background="@drawable/selector_menu"
                android:layout_width="match_parent"
                android:layout_height="@dimen/def_height"
                android:gravity="center_vertical"
                android:orientation="horizontal">
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:background="@drawable/ic_add_friend"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="添加朋友"
                    android:textSize="15sp"
                    android:layout_marginLeft="10dp"
                    android:textColor="@color/white"/>
            </LinearLayout>
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="0.8dp"
                android:background="@color/colorPrimaryDark"/>
            <LinearLayout
                android:id="@+id/scan"
                android:layout_width="match_parent"
                android:background="@drawable/selector_menu"
                android:layout_height="@dimen/def_height"
                android:gravity="center_vertical"
                android:orientation="horizontal">
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:background="@drawable/ic_scan_white"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="扫一扫"
                    android:textSize="15sp"
                    android:layout_marginLeft="10dp"
                    android:textColor="@color/white"/>
            </LinearLayout>
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="0.8dp"
                android:background="@color/colorPrimaryDark"/>
            <LinearLayout
                android:id="@+id/payment"
                android:background="@drawable/selector_menu"
                android:layout_width="match_parent"
                android:layout_height="@dimen/def_height"
                android:gravity="center_vertical"
                android:orientation="horizontal">
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:background="@drawable/ic_payment_received"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="收付款"
                    android:textSize="15sp"
                    android:layout_marginLeft="10dp"
                    android:textColor="@color/white"/>
            </LinearLayout>
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="0.8dp"
                android:background="@color/colorPrimaryDark"/>
            <LinearLayout
                android:id="@+id/help"
                android:layout_width="match_parent"
                android:background="@drawable/selector_menu"
                android:layout_height="@dimen/def_height"
                android:gravity="center_vertical"
                android:orientation="horizontal">
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:background="@drawable/ic_help_feedback"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="帮助与反馈"
                    android:textSize="15sp"
                    android:layout_marginLeft="10dp"
                    android:textColor="@color/white"/>
            </LinearLayout>
        </LinearLayout>
    </android.support.v7.widget.CardView>

</LinearLayout>